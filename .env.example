# DriveConnect UK Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=driveconnect_uk
DB_SSL=false

# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@driveconnect.uk
FROM_NAME=DriveConnect UK

# WhatsApp Configuration
WHATSAPP_NUMBER=447756183484

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Payment Configuration (Stripe example)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Redis Configuration (for sessions/caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
DVSA_API_KEY=your_dvsa_api_key

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
